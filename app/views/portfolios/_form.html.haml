= form_for @portfolio do |f|
  -if @portfolio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@portfolio.errors.count, "error")} prohibited this portfolio from being saved:"
      %ul
        - @portfolio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_date
    %input{:type => :text, :id => :start_date, :name => "portfolio[start_date]", :value => "#{@portfolio.start_date.strftime("%d %b, %Y")}"}
  .actions
    = f.submit 'Save'

:javascript
  $("#start_date").datepicker({ dateFormat: "dd M, yy", changeMonth: true, changeYear: true });
